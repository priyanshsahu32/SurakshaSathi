<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgnd"
    tools:context=".EmergencyLocation">


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="142dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="21dp"
        android:id="@+id/send"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="SEND LOCATION"
        android:background="@drawable/round_cornot02"
        android:textColorHint="@color/black"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/receiver"
        android:layout_width="142dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        android:layout_marginEnd="50dp"
        android:hint="Manage Receiver"
        android:background="@drawable/round_cornot02"
        android:textSize="20dp"></androidx.appcompat.widget.AppCompatButton>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receiver"
        android:layout_margin="15dp"
        app:cardCornerRadius="16dp">


        <fragment

            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            tools:layout="@layout/support_simple_spinner_dropdown_item" />
    </androidx.cardview.widget.CardView>


</RelativeLayout>