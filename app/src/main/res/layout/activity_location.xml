<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmergencyLocation">


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="142dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="26dp"
        android:id="@+id/send"

        android:text="SEND LOCATION" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/receiver"
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="50dp"
        android:hint="Receiver"
        android:textSize="30dp"></androidx.appcompat.widget.AppCompatButton>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:layout_below="@+id/receiver"
        android:layout_margin="10dp"

        android:name="com.google.android.gms.maps.SupportMapFragment"
        tools:layout="@layout/support_simple_spinner_dropdown_item"></fragment>


</RelativeLayout>