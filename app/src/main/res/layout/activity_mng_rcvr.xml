<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgnd"
    tools:context=".MngRcvr">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview"
        android:layout_marginTop="80dp"
        ></ListView>

    <EditText
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="enternumber"
        android:outlineSpotShadowColor="@color/white"
        android:layout_margin="15dp"
        android:id="@+id/contact_et"
        ></EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addcontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/round_cornot02"
        android:layout_marginEnd="34dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="ADD"></androidx.appcompat.widget.AppCompatButton>

</RelativeLayout>